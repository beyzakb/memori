package Giris;

import java.util.Scanner;
public class tezdi{
    public static void main(String[] args) {
        int k;
        int total=0;
        Scanner scan = new Scanner(System.in);

        
        do {
            System.out.print("SayÄ± Giriniz: ");
            k = scan.nextInt();

            if (k%4 == 0) {
                    total+=k;


            }
                
            

        } while (k%2==0);
        System.out.println("toplam: "+total);

    }
}
